{% extends 'templates/default.html.twig' %}
{% set page =
    {
        "title": "Envio",
        "subtitle": "Crear",
        "section": "Envio"
    }
%}

{% block breadcrumb %}
    <li><a href=""><i class="fa fa-hashtag"></i>{{page.title}}</a></li>
    <li class="active"> {{ page.subtitle }}</li>
{% endblock %}

{% block content %}
<form action="{{ path('envio_new')}}" id="formSend" method="post">
<div>
    <div class="box box-primary">
        <div class="box-body">
            <div class="form-group">
              <label class="required">Sector</label>
              <select name="sector" class="form-control" placeholder="Seleccione un Sector">
                {% for sector in sectores %}
                  <option value="{{sector.id}}">{{sector.nombre}}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group">
                <label class="required">Responsable</label>
                <input name="responsable" required="required" type="text" class="form-control" \>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="box">
        <div class="box-header">
          <label class="required">Producto</label>
          <select id="productSelect" data-placeholder="Seleccione un Producto..." class="form-control chosen-select">
            {% for producto in productos %}
              <option value="{{producto.id}}" stock="{{producto.stock}}" stockmin="{{producto.stockMinimo}}" >{{producto.nombre}}</option>
            {% endfor %}
          </select>
        </div>
        <div class="box-body">
            <div class=" form-inline dt-bootstrap">
                <table id="table" class="table dataTable table-bordered table-hover">
                    <thead>
                      <tr>
                          <th>#</th>
                          <th>Nombre</th>
                          <th>Cantidad</th>
                          <th></th>
                      </tr>
                    </thead>
                    <tbody id="listProduct">
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Cantidad</th>
                        <th></th>
                      </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="box-footer">
              <button type="submit" class="btn btn-success pull-right"><span class="glyphicon glyphicon-floppy-disk"></span> Generar Envio</button>
        </div>
    </div>
</div>
</form>
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('lib/bootstrap-datatables/dataTables.bootstrap.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('lib/chosen/chosen.min.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('css/DataTable.css') }}" />
{% endblock stylesheet %}


{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
      function remove(id, nombre){
        $('#product_'+id).remove();
      }
    </script>
    <script type="text/javascript" src="{{ asset('lib/bootstrap-datatables/jquery.dataTables.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/chosen/chosen.jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/chosen/chosen.proto.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/bootstrap-datatables/dataTables.bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/NewSend.js') }}"></script>
{% endblock javascript %}
