{% extends 'templates/default.html.twig' %}
{% set page =
    {
        "title": "Pedido",
        "subtitle": "Ver",
        "section": "Pedido"
    }
%}

{% block breadcrumb %}
    <li><a href=""><i class="fa fa-hashtag"></i>{{page.title}}</a></li>
    <li class="active"> {{ page.subtitle }}</li>
{% endblock %}

{% block content %}
<div>
    <div class="box">
        <div class="box-header">
          <div class="col-md-4">
              <label>Proveedor</label>
              <div class="form-control">
                <span>{{ pedido.proveedor.nombre}}</option>
              </div>
          </div>
          <div class="col-md-4">
              <label>Fecha Apertura</label>
              <div class="form-control">
                <span>{{ pedido.fechaApertura|date("m/d/Y")}}</option>
              </div>
          </div>
          <div class="col-md-4">
              <label>Fecha Cierre</label>
              <div class="form-control">
                <span>{{ pedido.fechaCierre|date("m/d/Y")}}</option>
              </div>
          </div>
        </div>
        <div class="box-body">
            <div class=" form-inline dt-bootstrap">
                <table id="table" class="table table-bordered table-hover">
                    <thead>
                      <tr>
                          <th>#</th>
                          <th>Nombre</th>
                          <th>Cantidad Pedida</th>
                          <th>Cantidad Recibida</th>
                      </tr>
                    </thead>
                    <tbody id="listProduct">
                      {% for item in pedido.detalle %}
                          <tr>
                            <td>{{item.id}}</td>
                            <td>{{item.producto.nombre}}</td>
                            <td>{{item.cantidadPedida}}</td>
                            <td>{{item.cantidadRecibida}}</td>
                          </tr>
                      {% endfor %}
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Cantidad Pedida</th>
                        <th>Cantidad Recibida</th>
                      </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="box-footer">
              <a href="{{ path('pedido_index')}}" class="btn btn-success pull-right"><span class="glyphicon glyphicon-menu-left"></span>Volver</a>
        </div>
    </div>
</div>
{% endblock %}
