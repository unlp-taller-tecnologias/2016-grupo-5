{% extends 'templates/default.html.twig' %}

{% set page =
    {
        "title": "Pedido",
        "subtitle": "Inicio",
        "section": "Pedido"
    }
%}

{% block breadcrumb %}
    <li><a href=""><i class="fa fa-hashtag"></i>Pedido</a></li>
    <li class="active"> {{ page.subtitle }}</li>
{% endblock %}


{% block content %}
<div class="box">
    <div class="box-body">
        <div class="dataTables_wrapper form-inline dt-bootstrap">
            <table id="table" class="table dataTable table-bordered table-hover">
              <thead>
                  <tr>
                      <th>Id</th>
                      <th>Fechaapertura</th>
                      <th>Fechacierre</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
              {% for pedido in pedidos %}
                  <tr>
                      <td><a href="{{ path('pedido_show', { 'id': pedido.id }) }}">{{ pedido.id }}</a></td>
                      <td>{% if pedido.fechaApertura %}{{ pedido.fechaApertura|date('Y-m-d H:i:s') }}{% endif %}</td>
                      <td>{% if pedido.fechaCierre %}{{ pedido.fechaCierre|date('Y-m-d H:i:s') }}{% endif %}</td>
                      <td>
                          <ul>
                              <li>
                                  <a href="{{ path('pedido_show', { 'id': pedido.id }) }}">show</a>
                              </li>
                              <li>
                                  <a href="{{ path('pedido_edit', { 'id': pedido.id }) }}">edit</a>
                              </li>
                          </ul>
                      </td>
                  </tr>
              {% endfor %}
              </tbody>
        </table>
      </div>
    </div>
</div>

    <ul>
        <li>
            <a href="{{ path('pedido_new') }}">Create a new pedido</a>
        </li>
    </ul>
{% endblock %}
