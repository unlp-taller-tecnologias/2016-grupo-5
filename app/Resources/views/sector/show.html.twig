{% extends 'templates/default.html.twig' %}

{% block content %}
    <h1>Sector</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sector.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ sector.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sector_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sector_edit', { 'id': sector.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
