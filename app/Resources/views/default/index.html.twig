{% extends 'templates/default.html.twig' %}

{% set page =
    {
        "title": "Inicio",
        "subtitle": "Dashboard",
        "section": "Administracion"
    }
%}

{% block breadcrumb %}
    <li><a href=""><i class="fa fa-hashtag"></i>{{page.title}}</a></li>
    <li class="active"> {{ page.subtitle }}</li>
    {% endblock %}
    {% block content %}
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-blue-gradient">
                <div class="inner">
                    <h3>Pedido</h3>
                    <p>a proveedor</p>
                </div>
                <div class="icon">
                    <i class="fa fa-indent "></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class=" col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-blue-gradient">
                <div class="inner">
                    <h3>Envio</h3>
                    <p>a sector</p>
                </div>
                <div class="icon">
                    <i class="fa fa-dedent"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green-gradient">
                <div class="inner">
                    <h3>estadisticas!</h3>
                    <p>campeon mira como viene la cosa!</p>
                </div>
                <div class="icon">
                    <i class="fa  fa-area-chart"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-red-gradient">
                <div class="inner">
                    <h3>{{ stockCritico}}</h3>

                    <p>Productos en stock critico</p>
                </div>
                <div class="icon">
                    <i class="fa fa-exclamation-triangle"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <div class="box box-primary ">
        <div class="box-header">
            <h3 class="box-title">Lista de pedidos abiertos</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-striped">
                <tbody><tr>
                        <th style="width: 10px">#</th>
                        <th>Proveedor</th>
                        <th>Fecha de realizacion</th>
                        <th>Cerrar pedido</th>
                    </tr>
                    {% for pedido in pedidosAbiertos %}
                        <tr>
                            <td>{{pedido.id}}</td>
                            <td>{{pedido.proveedor.nombre}}</td>
                            <td>{{pedido.fechaApertura|date('d/m/Y')}}</td>
                            <td><i class='fa fa-check-square'></i></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
{% endblock %}
